/* to create a database */
create database University;

/* to create a table */
create table University.students(
student_id int primary key,
student_name varchar(50),
student_age int,
student_major varchar(50)
);

/* to insert the values in table*/
insert into  University.students values
(1,"Abishek",16,"Arts"),
(2,"Karthi",15,"Maths_Biology"),
(3,"dilip",21,"BBA"),
(4,"Jana",17,"Economics"),
(5,"Alex",18,"Computer science");

select * from University.students;
drop table University.students;

/to retrieve the names of all students majoring in " BBA"/
SELECT * FROM University.students
WHERE student_major LIKE "C%";

